<br><br>
<h1><%= link_to "Create an Event", new_event_path, class: "new_event_path btn btn-lg btn-success" %></h1>


<% if @events.any? %>
<div class="card-columns">



  <% @events.each do |event| %>

  <div class="card">
    <div class="card-body">
      <h3 class="card-title"><%= link_to event.event_name, event_path(event) %></h3>
        <p class="card-text">WHEN: <%= event.event_date %> at <%= event.event_time %></p>
        <p class="card-text">WHERE: <%= event.event_address %>,<%= event.event_city %>, <%= event.event_state %>, <%= event.event_zip %></p>
        <p class="card-text">AGE REQUIREMENT: <%= event.event_age_min %>+ </p>
        <p class="card-text">DESCRIPTION: <%= event.event_description %></p>
        <p class="card-text">Category <%= event.event_category%></p>
    </div>
  </div>



  <% end %>

</div>
<% else %>
<p>There are no events.</p>
<% end %>
