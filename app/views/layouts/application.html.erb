<!DOCTYPE html>
<html>
  <head>
    <title>Neighborly</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
<br><br><br><br>
    <%= image_tag("neighborly_logo_house.png", class: "NBanner", alt: "Neighborly Logo") %>
    <% if current_user %>
   <%= current_user.user_email %> | <%= link_to "Sign out", '/signout' %>
 <% else %>
   <%= link_to "Sign up", 'signup' %> | <%= link_to "Sign in", '/signin' %>
 <% end %>

 <%= flash[:alert] %>
 <%= flash[:notice] %>


    <%= yield %>
  </body>
</html>
